
[pycodestyle]

# Sets the maximum line length for both code and docstrings to 150 characters
max-line-length = 150
max-doc-length = 150

# The error E131 "continuation line unaligned for hanging indent" is an error that enforces that all continuation lines (i.e., lines that belong to a
# statement on a previous line) must have the same indentation, this is, however, not ideal for method call chaining of fluent APIs, such as the ones
# that are used in SQLAlchemy
ignore = E131
